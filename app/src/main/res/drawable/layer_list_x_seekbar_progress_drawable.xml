<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"> <!--对背景的控制，没有进度时-->
        <shape>
            <corners android:radius="2dp" /> <!--圆角-->
            <solid android:color="#ecedf4"/> <!--颜色-->
        </shape>
    </item>
    <item android:id="@android:id/progress"> <!--对进度条的控制-->
        <clip>
            <shape>
                <corners android:radius="2dp" /> <!--圆角-->
                <solid android:color="#21d08e" /> <!--颜色-->
            </shape>
        </clip>
    </item>

</layer-list>