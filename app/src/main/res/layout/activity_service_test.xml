<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guide_half_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="startService"
        app:layout_constraintBottom_toTopOf="@+id/guide_half_height"
        android:textAllCaps="false"
        android:onClick="startService"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/tx_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="bindService"
        app:layout_constraintTop_toBottomOf="@+id/guide_half_height"
        android:textAllCaps="false"
        android:onClick="bindService"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="unBindService"
        app:layout_constraintTop_toBottomOf="@+id/tx_bind_service"
        android:textAllCaps="false"
        android:onClick="unBindService"
        android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>